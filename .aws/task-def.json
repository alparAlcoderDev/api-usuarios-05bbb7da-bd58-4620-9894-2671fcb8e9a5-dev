{
  "family": "api-usuarios-td",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::218595400203:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::218595400203:role/api-usuarios-task-role",
  "containerDefinitions": [
    {
      "name": "api-usuarios",
      "image": "<placeholder-will-be-replaced-by-action>",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/api-usuarios",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
